{% extends '@SyliusShop/layout.html.twig' %}

{% import '@SyliusUi/Macro/messages.html.twig' as messages %}

{% set header = wishlist.title %}

{% block title %}{{ parent() }} | {{ header }}{% endblock %}

{% block content %}
    {% include '@WebburzaSyliusWishlistPlugin/Resources/views/Shop/Wishlist/_header.html.twig' %}

    {% if wishlist.items | length %}
        <div class="ui stackable grid">
            <div class="column">
                {% include '@WebburzaSyliusWishlistPlugin/Resources/views/Shop/Wishlist/_items.html.twig' %}
            </div>
        </div>
    {% else %}
        {{ messages.info('webburza_sylius_wishlist.ui.wishlist_is_empty'|trans) }}
    {% endif %}
{% endblock %}
